{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"tasks": [
		{
			"taskName": "[local] build",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"isShellCommand": true,
			"isBuildCommand": true,
			"showOutput": "never"
		},
		{
			"taskName": "[docker] build-and-start",
			"command": "npm",
			"args": [
				"run",
				"docker-run"
			],
			"isShellCommand": true,
			"showOutput": "silent"
		},
		{
			"taskName": "[docker] build-and-watch",
			"command": "npm",
			"args": [
				"run",
				"docker-watch"
			],
			"isShellCommand": true,
			"showOutput": "silent"
		},


		
		{
			"taskName": "[docker] stop-and-remove",
			"command": "npm",
			"args": [
				"run",
				"docker-stop"
			],
			"isShellCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "[docker] docker-cleanup",
			"command": "npm",
			"args": [
				"run",
				"docker-cleanup"
			],
			"isShellCommand": true,
			"showOutput": "always"
		}
	]
}